@model Global_Solution.Application.Dtos.SensorDto

@{
    ViewData["Title"] = "Excluir Sensor";
}

<h2>Confirmar Exclusão</h2>

<p>Tem certeza que deseja excluir o sensor <strong>@Model.ID_SENSOR</strong>?</p>

<div><strong>Tipo:</strong> @Model.TIPO_SENSOR</div>
<div><strong>Modelo:</strong> @Model.MODELO</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_SENSOR" />
    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
