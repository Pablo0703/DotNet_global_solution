@model Global_Solution.Application.Dtos.SensorDto

@{
    ViewData["Title"] = "Editar Sensor";
}

<h2>Editar Sensor</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ID_SENSOR" />

    <div class="form-group">
        <label>ID Área</label>
        <input asp-for="ID_AREA" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <input asp-for="TIPO_SENSOR" class="form-control" />
    </div>
    <div class="form-group">
        <label>Modelo</label>
        <input asp-for="MODELO" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Instalação</label>
        <input asp-for="DATA_INSTALACAO" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Última Manutenção</label>
        <input asp-for="ULTIMA_MANUTENCAO" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input asp-for="STATUS_SENSOR" class="form-control" />
    </div>
    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
</form>
