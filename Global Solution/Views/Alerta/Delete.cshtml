@model Global_Solution.Application.Dtos.AlertaDto

@{
    ViewData["Title"] = "Excluir Alerta";
}

<h2>Confirmar Exclusão</h2>

<p>Tem certeza que deseja excluir este alerta?</p>

<div><strong>Tipo:</strong> @Model.TIPO_ALERTA</div>
<div><strong>Mensagem:</strong> @Model.MENSAGEM_ALERTA</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_ALERTA" />
    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
