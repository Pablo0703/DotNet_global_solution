@model Global_Solution.Application.Dtos.AlertaDto

@{
    ViewData["Title"] = "Detalhes do Alerta";
}

<h2>Detalhes do Alerta</h2>

<div><strong>ID Alerta:</strong> @Model.ID_ALERTA</div>
<div><strong>ID Área:</strong> @Model.ID_AREA</div>
<div><strong>ID Leitura Gatilho:</strong> @Model.ID_LEITURA_GATILHO</div>
<div><strong>Timestamp:</strong> @Model.TIMESTAMP_ALERTA.ToString("g")</div>
<div><strong>Tipo:</strong> @Model.TIPO_ALERTA</div>
<div><strong>Mensagem:</strong> @Model.MENSAGEM_ALERTA</div>
<div><strong>Status:</strong> @Model.STATUS_ALERTA</div>

<a asp-action="Edit" asp-route-id="@Model.ID_ALERTA" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
