@model IEnumerable<Global_Solution.Application.Dtos.UsuarioDto>

@{
    ViewData["Title"] = "Usuários";
}

<h2>Lista de Usuários</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Usuário</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.NOME_USUARIO</td>
                <td>@u.EMAIL</td>
                <td>@u.TELEFONE</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.ID_USUARIO">Editar</a> |
                    <a asp-action="Details" asp-route-id="@u.ID_USUARIO">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@u.ID_USUARIO">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
