@model IEnumerable<Global_Solution.Application.Dtos.InscricaoAlertaDto>

@{
    ViewData["Title"] = "Inscrições de Alerta";
}

<h2>Lista de Inscrições</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Inscrição</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Usuário</th>
            <th>ID Área</th>
            <th>Timestamp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.ID_USUARIO</td>
                <td>@i.ID_AREA</td>
                <td>@i.TIMESTAMP_INSCRICAO.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@i.ID_INSCRICAO">Editar</a> |
                    <a asp-action="Details" asp-route-id="@i.ID_INSCRICAO">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@i.ID_INSCRICAO">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
