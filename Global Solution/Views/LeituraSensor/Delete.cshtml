@model Global_Solution.Application.Dtos.LeituraSensorDto

@{
    ViewData["Title"] = "Excluir Leitura";
}

<h2>Confirmar Exclusão</h2>

<p>Você tem certeza que deseja excluir esta leitura?</p>

<div class="mb-3">
    <strong>Sensor:</strong> @Model.ID_SENSOR
</div>
<div class="mb-3">
    <strong>Data/Hora:</strong> @Model.TIMESTAMP_LEITURA.ToString("dd/MM/yyyy HH:mm")
</div>
<div class="mb-3">
    <strong>Valor:</strong> @Model.VALOR_LEITURA @Model.UNIDADE_MEDIDA
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_LEITURA" />
    <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
