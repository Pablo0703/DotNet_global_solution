@model Global_Solution.Application.Dtos.AreaRiscoDto

@{
    ViewData["Title"] = "Criar Área de Risco";
}

<h2>Criar Nova Área de Risco</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Nome da Área</label>
        <input asp-for="NOME_AREA" class="form-control" />
    </div>
    <div class="form-group">
        <label>Latitude</label>
        <input asp-for="LATITUDE" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Longitude</label>
        <input asp-for="LONGITUDE" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Nível Estação Seca</label>
        <input asp-for="NIVEL_NORMAL_ESTACAO_SECA" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Nível Estação Chuva</label>
        <input asp-for="NIVEL_NORMAL_ESTACAO_CHUVA" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Nível Alerta Preventivo</label>
        <input asp-for="NIVEL_ALERTA_PREVENTIVO" class="form-control" type="number" step="any" required />
    </div>
    <div class="form-group">
        <label>Nível Alerta Emergência</label>
        <input asp-for="NIVEL_ALERTA_EMERGENCIA" class="form-control" type="number" step="any" required />
    </div>
    <div class="form-group">
        <label>Nível Evacuação</label>
        <input asp-for="NIVEL_EVACUACAO" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Área Alagada (Alerta)</label>
        <input asp-for="AREA_ALAGADA_ALERTA" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Área Alagada (Emergência)</label>
        <input asp-for="AREA_ALAGADA_EMERGENCIA" class="form-control" type="number" step="any" />
    </div>
    <div class="form-group">
        <label>Método Medição Nível</label>
        <input asp-for="METODO_MEDICAO_NIVEL" class="form-control" />
    </div>
    <div class="form-group">
        <label>Método Medição Extensão</label>
        <input asp-for="METODO_MEDICAO_EXTENSAO" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fonte de Dados</label>
        <input asp-for="FONTE_DADOS" class="form-control" />
    </div>
    <div class="form-group">
        <label>Última Atualização</label>
        <input asp-for="ULTIMA_ATUALIZACAO" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label>Responsável Atualização</label>
        <input asp-for="RESPONSAVEL_ATUALIZACAO" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="DESCRICAO" class="form-control"></textarea>
    </div>

    <input type="submit" value="Salvar" class="btn btn-success" />
</form>
